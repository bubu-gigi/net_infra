/etc/init.d/networking restart
/etc/init.d/isc-dhcp-server start

ip route add 50.0.0.4/31 via 50.0.0.1
ip route add 50.0.0.6/31 via 50.0.0.3
ip route add default via 50.0.0.9

iptables -F
iptables -t nat -F
iptables -X
iptables -t nat -X

# NAT
iptables -t nat -A POSTROUTING -s 192.168.1.0/24 -o eth1 -j MASQUERADE
iptables -t nat -A POSTROUTING -s 192.168.1.0/24 -o eth2 -j MASQUERADE
iptables -t nat -A POSTROUTING -s 192.168.1.0/24 -o eth3 -j MASQUERADE

# DROP unless ESTABLISHED
iptables -A FORWARD -m state --state ESTABLISHED,RELATED -j ACCEPT

iptables -A FORWARD -m state -d 192.168.1.0/24 -i eth1 --state NEW -j DROP
iptables -A FORWARD -m state -d 192.168.1.0/24 -i eth2 --state NEW -j DROP
iptables -A FORWARD -m state -d 192.168.1.0/24 -i eth3 --state NEW -j DROP

iptables -A FORWARD ! -d 192.168.1.0/24 ! -s 192.168.1.0/24 -j ACCEPT
iptables -P FORWARD DROP